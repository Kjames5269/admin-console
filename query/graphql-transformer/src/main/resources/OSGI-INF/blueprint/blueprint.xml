<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" >

    <bean id="executionStrategy" class="org.codice.ddf.graphql.strategy.ExecutionStrategyProviderImpl" />
    <service ref="executionStrategy" interface="graphql.servlet.ExecutionStrategyProvider" />

    <bean id="errorHandler" class="org.codice.ddf.graphql.strategy.GraphQLErrorHandler" />
    <service ref="errorHandler" interface="graphql.servlet.GraphQLErrorHandler" />

    <bean id="instrumentation" class="org.codice.ddf.graphql.QueryValidationInstrumentationProvider" />
    <service ref="instrumentation" interface="graphql.servlet.InstrumentationProvider" />

    <reference-list id="fieldProviders"
                    interface="org.codice.ddf.admin.api.FieldProvider"
                    availability="optional">
        <reference-listener bind-method="bindFieldProvider" unbind-method="unbindFieldProvider" ref="graphQLTransformer"/>
    </reference-list>

    <bean id="graphQLTransformer" class="org.codice.ddf.graphql.GraphQLTransformer" >
        <argument ref="blueprintBundleContext"/>
        <argument ref="fieldProviders"/>
    </bean>
</blueprint>
