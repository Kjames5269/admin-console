<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <reference id="featureService" interface="org.apache.karaf.features.FeaturesService" availability="mandatory"/>


    <service id="csw_source_component" interface="org.codice.ddf.admin.component.api.Component">
        <bean class="org.codice.ddf.admin.component.impl.CswSourceComponent">
            <argument ref="featureService"/>
        </bean>
    </service>

    <service id="embedded_ldap_component"  interface="org.codice.ddf.admin.component.api.Component">
        <bean class="org.codice.ddf.admin.component.impl.EmbeddedLdapComponent">
            <argument ref="featureService"/>
        </bean>
    </service>

    <service id="idp_component" interface="org.codice.ddf.admin.component.api.Component">
        <bean class="org.codice.ddf.admin.component.impl.IdpComponent">
            <argument ref="featureService"/>
        </bean>
    </service>

    <reference-list id="components"
                    interface="org.codice.ddf.admin.component.api.Component"
                    availability="optional"
    >
    </reference-list>


    <service id="componentFieldProvider" interface="org.codice.ddf.admin.api.FieldProvider">
        <bean class="org.codice.ddf.admin.component.impl.ComponentFieldProvider">
            <argument ref="components"/>
        </bean>
    </service>
</blueprint>
